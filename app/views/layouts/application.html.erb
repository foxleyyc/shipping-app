<!DOCTYPE html>
<html>
  <head>
    <title>Frete de Transportadora</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <div>
      <%= link_to 'Home', root_path %> <br>
      <%= link_to 'Registrar transportadora', new_carrier_path %> <br>
      <%= link_to 'Registrar veÃ­culo', new_vehicle_path %> <br>
    </div>

    <div>
      <% if carrier_user_signed_in? %>
        <%= button_to 'Sair', destroy_carrier_user_session_path, method: :delete %> <br>
        <p>Logado como:</p>
        <p><%= current_carrier_user.name %> - <%= current_carrier_user.carrier.corporation_name %></p>
      <% elsif admin_signed_in? %>
        <%= button_to 'Sair', destroy_admin_session_path, method: :delete %>
        <p>Logado como:</p>
        <p><%= current_admin.name %> - Administrador</p>
      <% else %>
        <%= button_to 'Acesso transportadora', new_carrier_user_session_path, method: :get %>
        <%= button_to 'Acesso administrador', new_admin_session_path, method: :get %>
      <% end %>
    </div>

     <%= alert %> 
     <%= notice %> 
    <%= yield %> 
    
  </body>
</html>
